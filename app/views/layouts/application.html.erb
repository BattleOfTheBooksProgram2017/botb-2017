<!DOCTYPE html>
<html>
  <head>
    <title>Capstone2017</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav>
      <ul>
        <li><%= link_to('Home', root_path) %></li>
        <li><%= link_to('About', home_about_path) %></li>
        <li><%= link_to('Contact', home_contact_path) %></li>
        <li><%= link_to('Books', books_path) %></li>
        <li><%= link_to('Levels', levels_path) %></li>
        <li><%= link_to('Teams', teams_path) %></li>
        <li><%= link_to('Roles', roles_path) %></li>
        <li><%= link_to('Years', years_path) %></li>
        <li><%= link_to('Users', users_path) %></li>
        <li><%= link_to('Questions', questions_path) %></li>
      </ul>
    </nav>

    <div class="container">
    <%= yield %>
      <% if user_signed_in? %>
        <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        </li>
      <% end %>
    </div>

  </body>
</html>
